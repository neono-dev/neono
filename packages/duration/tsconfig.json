{
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "CommonJS",
    "baseUrl": "./",
    "outDir": "./dist",
    "lib": ["ES6"],
    "declaration": true,
    "declarationMap": true,
    "target": "ES2021",
    "sourceMap": true,
    "isolatedModules": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "index.ts"],
  "exclude": ["src/**/*.test.ts"]
}
